<Window x:Class="PlanQuery.frmProjInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlanQuery"
        mc:Ignorable="d"
        Title="Project Informatin"
        Height="340" Width="300"
        MinWidth="280" MinHeight="320"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <Style x:Key="StyledButton" TargetType="Button">
            <Setter Property="Background" Value="#E5E7EB"/>
            <Setter Property="BorderBrush" Value="#9CA3AF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D1D5DB"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#9CA3AF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Height" Value="26"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="IsEditable" Value="True"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Height" Value="26"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Border Background="White"
            CornerRadius="8"
            BorderBrush="#9CA3AF"
            BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0"
                    Background="#2B5A8E"
                    CornerRadius="8,8,0,0"
                    BorderBrush="#E5E7EB"
                    BorderThickness="0,0,0,1">
                <Grid>
                    <TextBlock Text="Project Information"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="White"
                               VerticalAlignment="Center"
                               Margin="15,0,0,0"/>
                    <Button Content="×"
                            Width="30" Height="30"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,5,0"
                            Background="Transparent"
                            BorderThickness="0"
                            FontSize="20"
                            Foreground="White"
                            Cursor="Hand"
                            Click="btnCancel_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="3">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#1E3F6F"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <!-- Content Area -->
            <Border Grid.Row="1" Margin="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Plan Name -->
                    <Label Grid.Row="0" Grid.Column="0" Content="Plan Name:"/>
                    <TextBox Grid.Row="0" Grid.Column="1" x:Name="tbxPlanName"/>

                    <!-- Spec Level -->
                    <Label Grid.Row="2" Grid.Column="0" Content="Spec Level:"/>
                    <ComboBox Grid.Row="2" Grid.Column="1" x:Name="cbxSpecLevel"/>

                    <!-- Client Name -->
                    <Label Grid.Row="4" Grid.Column="0" Content="Client Name:"/>
                    <ComboBox Grid.Row="4" Grid.Column="1" x:Name="cbxClientName"/>

                    <!-- Client Division -->
                    <Label Grid.Row="6" Grid.Column="0" Content="Client Division:"/>
                    <ComboBox Grid.Row="6" Grid.Column="1" x:Name="cbxClientDivision"/>

                    <!-- Client Subdivision -->
                    <Label Grid.Row="8" Grid.Column="0" Content="Client Subdivision:"/>
                    <TextBox Grid.Row="8" Grid.Column="1" x:Name="tbxClientSubdivision"/>

                    <!-- Garage Loading -->
                    <Label Grid.Row="10" Grid.Column="0" Content="Garage Loading:"/>
                    <ComboBox Grid.Row="10" Grid.Column="1" x:Name="cbxGarageLoading"/>

                    <!-- Buttons -->
                    <StackPanel Grid.Row="12" Grid.ColumnSpan="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right">
                        <Button x:Name="btnOK"
                                Content="OK"
                                Width="80" Height="25"
                                Margin="0,0,8,0"
                                IsDefault="True"
                                Click="btnOK_Click"
                                Style="{StaticResource StyledButton}"/>
                        <Button x:Name="btnCancel"
                                Content="Cancel"
                                Width="80" Height="25"
                                Margin="0,0,8,0"
                                Click="btnCancel_Click"
                                Style="{StaticResource StyledButton}"/>
                        <Button x:Name="btnHelp"
                                Content="Help"
                                Width="80" Height="25"
                                Click="btnHelp_Click"
                                Style="{StaticResource StyledButton}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>