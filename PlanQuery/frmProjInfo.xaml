<Window x:Class="PlanQuery.frmProjInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlanQuery"
        mc:Ignorable="d"
        Title="Project Informatin"
        Height="380" Width="360"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ShowInTaskbar="False">

    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="IsEditable" Value="True"/>
            <Setter Property="Height" Value="26"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                   Text="Enter or select project information."
                   TextWrapping="Wrap"
                   Foreground="#555"
                   FontSize="12"/>

        <!-- Plan Name -->
        <Label Grid.Row="2" Grid.Column="0" Content="Plan Name:"/>
        <TextBox Grid.Row="2" Grid.Column="1" x:Name="tbxPlanName"
                 Height="26" VerticalContentAlignment="Center"/>

        <!-- Spec Level -->
        <Label Grid.Row="4" Grid.Column="0" Content="Spec Level:"/>
        <ComboBox Grid.Row="4" Grid.Column="1" x:Name="cbxSpecLevel"/>

        <!-- Client Name -->
        <Label Grid.Row="6" Grid.Column="0" Content="Client Name:"/>
        <ComboBox Grid.Row="6" Grid.Column="1" x:Name="cbxClientName"/>

        <!-- Client Division -->
        <Label Grid.Row="8" Grid.Column="0" Content="Client Division:"/>
        <ComboBox Grid.Row="8" Grid.Column="1" x:Name="cbxClientDivision"/>

        <!-- Client Subdivision -->
        <Label Grid.Row="10" Grid.Column="0" Content="Client Subdivision:"/>
        <TextBox Grid.Row="10" Grid.Column="1" x:Name="tbxClientSubdivision"
                 Height="26" VerticalContentAlignment="Center"/>

        <!-- Garage Loading -->
        <Label Grid.Row="12" Grid.Column="0" Content="Garage Loading:"/>
        <ComboBox Grid.Row="12" Grid.Column="1" x:Name="cbxGarageLoading"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="14" Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button x:Name="btnOK"
                    Content="OK"
                    Width="80" Height="28"
                    Margin="0,0,8,0"
                    IsDefault="True"
                    Click="btnOK_Click"/>
            <Button x:Name="btnCancel"
                    Content="Cancel"
                    Width="80" Height="28"
                    Margin="0,0,8,0"
                    Click="btnCancel_Click"/>
            <Button x:Name="btnHelp"
                    Content="Help"
                    Width="80" Height="28"
                    Click="btnHelp_Click"/>
        </StackPanel>
    </Grid>
</Window>